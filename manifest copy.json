{
  "manifest_version": 3,
  "name": "Face Scroll Chrome",
  "version": "0.1.0",
  "description": "Controla o scroll da p√°gina com movimentos faciais.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_scripts/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "libs/tfjs-core.js",
        "libs/tfjs-converter.js",
        "libs/tfjs-backend-webgl.js",
        "libs/tensorflow-models-face-detection.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}